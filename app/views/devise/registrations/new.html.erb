<div class="box-form my-4">
	<div class="left">
		<div class="overlay">
		<h1>Hello Buddy.</h1>
		<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.
		Curabitur et est sed felis aliquet sollicitudin</p>
		<%# <span>
			<p>login with social media</p>
			<a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
			<a href="#"><i class="fa fa-twitter" aria-hidden="true"></i> Login with Twitter</a>
		</span> %>
		</div>
	</div>
	
	
		<div class="right">
		<h5 class="mt-3">Sign up</h5>
		<p style="visibility: hidden;">Don't have an account? <a href="#">Creat Your Account</a> it takes less than a minute</p>
		<div class="inputs">
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
 
  <div class="field mt-2">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control mt-0' %>
  </div>

  <div class="field mt-2">
    <%= f.label :phone %>
    <%= f.telephone_field :phone, autofocus: true, autocomplete: "phone", class: 'form-control mt-0' %>
  </div>

    <%= f.hidden_field :role_id, value: 2 %>

  <div class="field mt-2">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mt-0' %>
  </div>

  <div class="field mt-2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control mt-0' %>
  </div>

  <div class="field mt-2">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mt-0' %>
  </div>

  <%= f.submit "Sign up", class: 'mt-3' %>
<br>
       <div>
          <!-- <%= render "devise/shared/links" %> -->
       </div>
       
	</div>
	<% end %>
</div>
</div>