<%= form_with(model: @category) do |form| %>
  <% if @category.errors.any? %>
    <div style="color: red">
      <!-- <h2><%= pluralize(@category.errors.count, "error") %> prohibited this @category from being saved:</h2> -->

      <ul>
        <% @category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row col-md-12">
    <div class="col-md-2">
      <%= form.label :name, style: "display: block", class: 'my-3' %>
    </div>
    <div class="col-md-10">
      <%= form.text_field :name, class: 'form-control w-50' %>
    </div>
  </div>

  <div class="row col-md-12">
    <div class="col-md-2">
      <%= form.label :content, style: "display: block", class: 'my-3' %>
    </div>
    <div class="col-md-10">
    <%= form.text_area :content, class: 'form-control w-50', size: "70x5" %>
    </div>
  </div>

  <div class="row col-md-12">
    <div class="col-md-2">
      <%= form.label :feature_ids, style: "display: block", class: 'my-3' %>
    </div>
    <div class="col-md-10 mt-2">
        <%= form.select :feature_ids, options_for_select(Feature.select('id','name').collect { |a| ["#{a.name}", a.id] }, :selected => form.object.feature_ids), {}, {multiple: 'true', required: 'true', autofocus: 'true', class: 'form-select select2 w-50 mt-2'} %>
    </div>
  </div>

  <div class="row col-md-12">
    <div class="col-md-2">
      <%= form.label :amount, style: "display: block", class: 'my-3' %>
    </div>
    <div class="col-md-10">
      <%= form.number_field :amount, in: 1..10000, class: 'form-control w-50' %>
    </div>
  </div>

  <div class="row col-md-12">
    <div class="col-md-2">
      <%= form.label :image, style: "display: block", class: 'my-3' %>
    </div>
    <div class="col-md-10">
      <%= form.file_field :image, class: 'form-control w-50' %>
    </div>
  </div>

  <div>
    <%= form.submit 'Submit', class: 'btn btn-primary my-2' %>
  </div>
<% end %>