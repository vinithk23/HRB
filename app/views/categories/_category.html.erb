<div id="<%= dom_id category %>">
<h1>Category</h1>
  <p>
    <strong>Name:</strong>
    <%= category.name %>
  </p>
 
  <p>
    <strong>Content:</strong>
    <%= category.content ? category.content : '-' %>
  </p>
 
  <p>
    <strong>Features:</strong>
    <% features = Feature.where(id: category.feature_ids)  %>
    <% features.each do |feature| %>
    <%= feature.name + ',' %>
    <% end %>
  </p>
 
  <p>
    <strong>Amount:</strong>
    <%= category.amount %>
  </p>

  <div>
    <header><strong>Image:</strong></header>
    <%= image_tag ((category.image.present?) ? category.image :  ""), size: "300x200", class: 'my-2' %>
  </div>

</div>
