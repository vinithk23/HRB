<%= render 'categories/category', category: @category %>

<div class="mb-3">
  <%= link_to "Edit this category", edit_category_path(@category), class: 'btn btn-warning' %> |
  <%= link_to "Back to category", categories_path, class: 'btn btn-secondary' %>

  <%= button_to "Destroy this category", @category, method: :delete, class: 'btn btn-danger mt-2' %>
</div>
