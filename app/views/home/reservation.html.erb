    <!-- END section -->

    <section class="section contact-section" id="reservationForm">
    <%= form_with url: new_room_booking_path, method: :post do |form| %>
      <div class="container">
        <div class="row">
          <div class="col-md-7">
                    <%= form.hidden_field :room_category, class: 'form-control', value: $room_category, readonly: 'true' %>
                  
              <div class="row">
                <div class="col-md-6 form-group">
                    <label style="display: block;" class="text-black font-weight-bold">Name :</label>
                    <input type="text" class="form-control" value="<%= current_user.name %>" readonly>
                    
                </div>
                <div class="col-md-6 form-group">
                    <label style="display: block;" class="text-black font-weight-bold">Phone :</label>
                    <input type="text" class="form-control" value="<%= current_user.phone %>" readonly>
                </div>
              </div>
          
              <div class="row mt-2">
                <div class="col-md-12 form-group">
                    <label style="display: block;" class="text-black font-weight-bold">Email :</label>
                    <input type="text" class="form-control" value="<%= current_user.email %>" readonly>
                </div>
              </div>

              <div class="row mt-2">
                <div class="col-md-6 form-group">
                    <%= form.label :check_in, style: "display: block", class: 'text-black font-weight-bold' %>
                    <%= form.text_field :check_in, class: 'form-control', value: $checkin_date, readonly: 'true' %>
                </div>
                <div class="col-md-6 form-group">
                    <%= form.label :check_out, style: "display: block", class: 'text-black font-weight-bold' %>
                    <%= form.text_field :check_out, class: 'form-control', value: $checkout_date, readonly: 'true' %>
                </div>
              </div>

              <div class="row mt-2">
                <div class="col-md-6 form-group">
                  <label for="adults" class="font-weight-bold text-black">Adults</label>
                  <div class="field-icon-wrap">
                    <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                      <%= form.select :adult_count, options_for_select([1,2,3,4], :selected => $adult_count), {}, { required: 'true', autofocus: 'true', class: 'form-control', id: 'adult_count', value: $adult_count} %>
                  </div>
                </div>
                <div class="col-md-6 form-group">
                  <label for="children" class="font-weight-bold text-black">Children</label>
                  <div class="field-icon-wrap">
                    <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                      <%= form.select :child_count, options_for_select([0,1,2,3,4], :selected => $child_count), {}, { required: 'true', autofocus: 'true', class: 'form-control', id: 'child_count', value: $child_count} %>
                  </div>
                </div>
              </div>
              <div class="row mt-2 mb-4">
                <div class="col-md-12 form-group">
                  <label class="text-black font-weight-bold" for="message">Notes</label>
                  <%= form.text_area :notes, size: "30x5", class: 'form-control' %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 form-group">
                
                </div>
              </div>
           

          </div>
          <div class="col-md-5">
            <div class="row">

            <div class="card mt-4">
              <div class="card-body">
               <h5 class="card-title">Billing Details</h5>
              <hr class="my-2">
                        
                        <div class="d-flex justify-content-between mx-3 mx-md-4 div2">
                            <div class="">
                                <div class="d-flex"> <p class="grey mt-3"><%= number_to_currency(@requestCategory.amount, :unit => "₹ ") %></p><span class="mt-3 mx-2">x</span> <span class="border ml-2 p-1 mt-3" id="reservationDays"><%= $reservation_days %> days</span>  </div>
                            </div>
                            <div class="align-self-center purple">
                                <%= number_to_currency((@requestCategory.amount * $reservation_days), :unit => "₹ ") %>
                            </div>
                            
                        </div>

                         <hr>
         
                        <div class="d-flex justify-content-center mx-3 mx-md-4 btn text-white"> 
                            <div></div>
                            <div><%= form.submit 'Reserve now', class: 'btn btn-primary text-white py-3 px-5 font-weight-bold'%> </div> 
                            <div></div>
                        </div>
              </div>
            </div>

              <div class="col-md-10 ml-auto contact-info mt-4">
                <p class="mb-2"><span class="d-block text-grey">Address:</span> <span class="text-black mt-2"> Maduravoyal, Chennai</span></p>
                <p class="mb-2"><span class="text-grey d-block">Phone:</span> <span class="text-black"> (+91) 9626232469</span></p>
                <p class="mb-0"><span class="text-grey d-block">Email:</span> <span class="text-black"> vinithk23@gmail.com</span></p>
              </div>
          </div>
        </div>
      </div>
    </div>
     <% end %>
    </section>

    <section class="section bg-image overlay" style="background-image: url('../images/hero_4.jpg');">
        <div class="container" >
          <div class="row align-items-center">
            <div class="col-12 col-md-6 text-center mb-4 mb-md-0 text-md-left">
              <h2 class="text-white font-weight-bold">A Best Place To Stay. Reserve Now!</h2>
            </div>
            <div class="col-12 col-md-6 text-center text-md-right">
              <a href="#reservationForm" class="btn btn-outline-white-primary py-3 text-white px-5">Reserve Now</a>
            </div>
          </div>
        </div>
      </section>

