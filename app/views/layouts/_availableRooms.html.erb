<script>

$('.featureDetails').hide();

$(".featureViewClick").click(function(e) {
  let divElement = $(this).parents('div').closest('.featureDetailsParentDiv').find('.featureDetails');
    if(divElement.is(':hidden')){
        divElement.show();
    } else {
        divElement.hide();
    }
})

